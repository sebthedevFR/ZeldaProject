{% extends "ZeldaBundle::layout.html.twig" %}
{% block title %}Categorie{% endblock %}
{% block pageContent %}

    <div class="text-center breadcrumb">
        <div class="row">
            <div class="controls">
                <button class="filter btn-filter btn btn-primary" data-filter="all">Tous</button>
                {% for categ in lesCateg %}
                    <button class="filter btn-filter btn btn-primary" data-filter=".{{ categ.libelle }}">{{ categ }}</button>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutter" id="conteneur">
            {% for armes in lesArmes %}
                <div class="col-md-2 portfolio-item mix {{ armes.laCategorie.libelle }}">
                    <a href="{{ path('zelda_item', {'id': armes.id}) }}">
                        <img class="img-responsive" src="{{ armes.vignetteUrl }}" alt="" width="700" height="400">
                    </a>
                    <h4>
                        <a href="{{ path('zelda_item', {'id': armes.id}) }}">{{ armes.libelle }}</a>
                    </h4>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{% block pageHeaderMain %}{% endblock %}
                <small>{% block pageHeaderSecondary %}{% endblock %}</small>
            </h1>
        </div>
    </div>
    <!-- Projects Row -->
    <div class="row">
        {% for armes in lesArmes %}
        <div class="col-md-2 portfolio-item">
            <a href="{{ path('zelda_item', {'id': armes.id}) }}">
                <img class="img-responsive" src="{{ armes.vignetteUrl }}" alt="" width="700" height="400">
            </a>
            <h4>
                <a href="{{ path('zelda_item', {'id': armes.id}) }}">{{ armes.libelle }}</a>
            </h4>
        </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(function () {
            $('#conteneur').mixItUp();
        });
    </script>
{% endblock %}