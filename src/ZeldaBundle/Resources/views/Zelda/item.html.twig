{% extends "ZeldaBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" href="{{ asset('css/customItem.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}{{ uneArme.libelle }}{% endblock %}
{% block pageContent %}
        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-6" align="center">
                <h1 class="page-header">{{ uneArme.libelle }}
                    <small class="smalltext">{{ uneArme.numeroIg }}</small>
                </h1>
            </div>

            <div class="col-lg-6"></div>
        </div>
    <br> <br>
        <!-- Portfolio Item Row -->
        <div class="row ">
            <div class="col-md-6" align="center" >
                <img class="img-responsive vignette" src="{{ uneArme.vignetteUrl }}" alt="">

            </div>
            <div class="col-md-6" align="center">
                <h3>Caractéristiques </h3>
                <p><i>{{ uneArme.description }}</i></p> <br>
                {% if uneArme.getLesLieux() is empty %}
                    <h3>Principaux lieux de disponibilité</h3>
                    <ul>
                        <li>Inconnu</li> <br>
                    </ul>
                {% else %}
                    <h3>Principaux lieux de disponibilité</h3>
                    <ul>
                        {% for lieu in uneArme.getLesLieux() %}
                            <li>{{ lieu.getLibelle() }}</li> <br>
                        {% endfor %}
                    </ul>
                {% endif %}
                <h3>Efficacité</h3>
                <p>{{ uneArme.efficacite }}</p>
            </div>
        </div>
        <!-- /.row -->

        {% if uneArme.getLesImages() is empty %}
        {% else %}
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Images</h3>
            </div>
            {% for images in uneArme.getLesImages() %}
            <div class="col-sm-3 col-xs-6">
                <a href="{{ images.url }}" data-lity data-lity-desc="Photo of a flower">
                    <img class="img-responsive portfolio-item" src="{{ images.url }}" alt="{{ images.alt }}">
                </a>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <div class="row ">
            <div class="col-lg-12">
                <h3 class="page-header">Autres armes.</h3>
            </div>
            {% for uneArmes in lesArmes %}
            <div class="col-sm-1 col-xs-2">
                <a href="{{  path('zelda_item', {'id': uneArmes.id}) }}" >
                    <img class="img-responsive" src="{{ uneArmes.vignetteUrl }}" alt="" width="100" height="100">
                </a>
                <h4>
                    <a href="{{ path('zelda_item', {'id': uneArmes.id}) }}">{{ uneArmes.libelle }}</a>
                </h4>
            </div>
            {% endfor %}
        </div>
        <!-- /.row -->

{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script>
    </script>
{% endblock %}